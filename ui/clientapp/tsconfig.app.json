{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "./**/*.vue",
    "./**/*.json",
    "../**/*.vue",
    "../../**/*.ts"
  ],
  "exclude": ["src/tests/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true
  }
}
